<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="clr-namespace:Heizungssteuerung_Client.Views"
			 mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Heizungssteuerung_Client.Views.UserTempPickerContainerView">

	<UserControl.Styles>
		<Style Selector="TextBlock">
			<Setter Property="FontSize" Value="18"/>
		</Style>
		<Style Selector="NumericUpDown">
			<Setter Property="FontSize" Value="18"/>
		</Style>
		<Style Selector="Button">
			<Setter Property="FontSize" Value="18"/>
		</Style>
	</UserControl.Styles>
	
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="6*"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
		<views:UserTempPickerView Name="UserTemperaturePickerView" Editable="True" SyncSettings="True"/>
		<ScrollViewer Grid.Row="1">
			<WrapPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
				<views:SettingView Name="IsolcationClassComboBox" SettingType="ComboBox" Text="Isolation Class"/>
				<views:SettingView Name="TrainButton" SettingType="Button" Text="Train Model"/>
			</WrapPanel>
		</ScrollViewer>
		<views:WaveView Name="LoadingWaveView" Grid.RowSpan="2" Text="Loading" FontSize="48"/>
	</Grid>
</UserControl>
