<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:Heizungssteuerung_Client"
			 mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Heizungssteuerung_Client.Views.MenuItemView">

	<StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Top" Orientation="Horizontal">
		<local:SvgImage Stretch="UniformToFill" Name="MenuItemIcon" Margin="0,0,50,0" ImageTint="White"/>
		<TextBlock Name="MenuItemTextBlock" Margin="0,5,0,0" HorizontalAlignment="Center"/>
	</StackPanel>
	
</UserControl>
