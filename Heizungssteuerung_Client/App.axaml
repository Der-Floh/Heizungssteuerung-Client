<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:Heizungssteuerung_Client"
             x:Class="Heizungssteuerung_Client.App"
             RequestedThemeVariant="Dark">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>

    <Application.Styles>
		<FluentTheme>
			<FluentTheme.Palettes>
				<!-- Palette for Light theme variant -->
				<ColorPaletteResources x:Key="Light" RegionColor="#9fa381"/>
				<!-- Palette for Dark theme variant -->
				<ColorPaletteResources x:Key="Dark" RegionColor="#1e1e1e"/>
			</FluentTheme.Palettes>
		</FluentTheme>
    </Application.Styles>
</Application>